hoverShift = 4px

a_drop()
  &:link
    text-decoration none
    color inherit
  &:visited 
    text-decoration none
    color inherit


button(size, clr = null, hoverColor = red)
  display flex
  flex-flow column nowrap
  align-items center
  justify-content center
  border-radius 5px
  border 1px solid
  if (clr)
    border-color clr
    color clr
  height size
  width size
  font-size size
  &:hover
    color hoverColor
    border-color hoverColor

materialHover()
  position relative
  top 0
  left 0
  border-radius hoverShift
  transition top, left, box-shadow
  transition-duration 0.1s
  box-shadow hoverShift * 0.4 hoverShift * 0.4 rgba(0, 0, 0, 0.4)
  &:hover
    top -(hoverShift * 0.5)
    left -(hoverShift * 0.5)
    box-shadow hoverShift * 0.8 hoverShift * 0.8 rgba(0, 0, 0, 0.4)

*
  box-sizing border-box

body
  padding 0
  margin 0
  background-image url('/img/back.jpg')
  background-position cover

#board
  padding 5px
  display flex
  flex-flow row nowrap
  width 100%
  height 100%

.unselect
  user-select none

.list
  display flex
  flex-flow column nowrap
  align-items center
  margin-right 10px
  width 300px
  min-height 150px
  background-color transparentify(#ddd, 0.9)
  materialHover()
  >h1
    border-radius hoverShift hoverShift 0 0
    text-align center
    background-color #333
    color white
    margin 0
    font-size 20px
    width 100%
    height 2em
    line-height 2em
  &_addcard
    margin 20px 0

.card
  margin 10px 0
  background-color #fff
  materialHover()
  a_drop()
  &_text
    outline none
    display flex
    flex-flow column nowrap
    align-items center
    justify-content center
    width 270px
    padding 35px
  &-edited
    user-select auto
    border red 1px solid
  &_editor
    display flex
    flex-flow column nowrap
    align-items center
    justify-content center
    z-index 100
    position absolute
    height 100%
    width 100%
    background-color transparentify(#000, 0.7)
    >form
      padding 35px
      border-radius 10px
      background-color #ddd
    &-hidden
      display none
  &_closeEditor
    z-index -100
    position absolute
    display block
    height 100%
    width 100%
  &_del
    position absolute
    right 5px
    top 5px
    &-div
      button(20px)
    >button[type='submit']
      background-color transparent
      button(20px)
    &-edited
      display none

.heartbeat
  position absolute
  bottom 5px
  right 5px
  color white