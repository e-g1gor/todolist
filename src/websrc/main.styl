hoverShift = 4px

materialHover()
  position relative
  top 0
  left 0
  border-radius hoverShift
  transition top, left, box-shadow
  transition-duration 0.1s
  box-shadow hoverShift * 0.4 hoverShift * 0.4 rgba(0, 0, 0, 0.4)

  // transition margin 0.5s
  &:hover
    top -(hoverShift * 0.5)
    left -(hoverShift * 0.5)
    box-shadow hoverShift * 0.8 hoverShift * 0.8 rgba(0, 0, 0, 0.4)

body
  background-image url('/img/back.jpg')
  background-position cover

#board
  display flex
  flex-flow row nowrap
  width 100%
  height 100%

.unselect
  user-select none

.list
  display flex
  flex-flow column nowrap
  align-items center
  margin-right 10px
  width 300px
  min-height 150px
  background-color transparentify(#ddd, 0.9)
  materialHover()

  >h1
    border-radius hoverShift hoverShift 0 0
    text-align center
    background-color #333
    color white
    margin 0
    font-size 20px
    width 100%
    height 2em
    line-height 2em

.card
  outline none
  display flex
  flex-flow column nowrap
  align-items center
  justify-content center
  margin 10px 0
  width 270px
  min-height 70px
  background-color #fff
  materialHover()

  &-edited
    user-select auto
    border red 1px solid